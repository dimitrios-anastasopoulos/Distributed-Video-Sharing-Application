<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.uni_tok">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/appName"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/HiddenTitleTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".newChannel" />
        <activity android:name=".runUser" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".ChannelActivity" />
        <activity android:name=".UploadVideoActivity" />
        <activity android:name=".UploadActivity" />
        <activity android:name=".addHashtag" />
        <activity android:name=".removeHashtag" />
        <activity android:name=".PlayVideo"/>
    </application>

</manifest>